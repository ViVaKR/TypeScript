{
    "version": "0.2.0",
    "configurations": [
    
        
        {
            "type": "node",
            "request": "launch",
            "name": "프로그램 시작",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // "program": "${file}",
            "program": "${workspaceFolder}/src/index.ts",
            // (추가함)
            // tsconfig.json 을 사용하여 응용프로그램을 빌드하기 위해
            // 타입스크립트 컴파일러를 사용하도록 Visual Studio Code 에 지시하기
            "preLaunchTask": "tsc: 빌드 - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}
